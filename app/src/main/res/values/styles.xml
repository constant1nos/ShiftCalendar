<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="my_buttons_style_1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">2</item>
        <item name="android:backgroundTint">@color/my_secondary_standard</item>
        <item name="android:paddingStart">3dp</item>
        <item name="android:paddingEnd">3dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="customDatePickerStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:datePickerStyle">@style/customDatePicker</item>
        <item name="android:background">@color/my_calendar_background</item>
        <item name="android:colorPrimary">@color/black</item>
        <item name="colorButtonNormal">@color/black</item>
    </style>

    <style name="customDatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
        <item name="android:background">@color/my_calendar_background</item>
    </style>

</resources>